<Window x:Class="NewPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewPlayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Border  Background="Gray" Opacity="0.5" CornerRadius="35" Height="500" Width="800" MouseDown="Border_MouseDown" />
        <Border Background="Black" Height="400" CornerRadius="35" Width="300" HorizontalAlignment="Left" Margin="50">
            <StackPanel Margin="10">
                <ListBox Background="Transparent" Height="350" VerticalAlignment="Top"
                         ItemsSource="{Binding MusicCollection}"
                         SelectedItem="{Binding SelectedSong}"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                         ScrollViewer.VerticalScrollBarVisibility="Hidden"
                         Foreground="White" HorizontalAlignment="Left" Width="280">

                </ListBox>

                <Button Width="100" Height="30" Margin="0,0"
                        Command="{Binding LoadMusic}">

                </Button>
              
            </StackPanel>           
          
        </Border>
        <Border Background="Black" Height="280" VerticalAlignment="Top" CornerRadius="35" Width="300" HorizontalAlignment="Right" Margin="50"/>
        <Border Background="Black" Height="100" VerticalAlignment="Bottom" CornerRadius="35" Width="300" HorizontalAlignment="Right" Margin="50">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button Width="50" Height="50" Command="{Binding Play}">
                    Play
                </Button>

                <Button Width="50" Height="50" Command="{Binding Pause}">
                    Pause
                </Button>

                <Button Width="50" Height="50" Command="{Binding Resume}">
                    Resume
                </Button>

                <Button Width="50" Height="50" Command="{Binding Previous}">
                    Previous
                </Button>

                <Button Width="50" Height="50" Command="{Binding Next}">
                    Next
                </Button>   
            </StackPanel>
        </Border>
    </Grid>
</Window>
